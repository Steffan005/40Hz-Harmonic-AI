{
  "productName": "Unity",
  "version": "1.0.0",
  "identifier": "ai.unity.local",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "externalBin": [
      "binaries/python_backend",
      "binaries/ollama"
    ],
    "resources": {
      "resources/*": "./"
    }
  },
  "app": {
    "windows": [
      {
        "title": "Unity â€” Quantum Evolution Interface",
        "width": 1280,
        "height": 800,
        "minWidth": 1024,
        "minHeight": 768,
        "center": true,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "plugins": {
    "shell": {
      "open": true,
      "sidecar": true,
      "scope": [
        {
          "name": "binaries/python_backend",
          "sidecar": true,
          "args": []
        },
        {
          "name": "binaries/ollama",
          "sidecar": true,
          "args": ["serve"]
        }
      ]
    }
  }
}
